{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/upload/(.*)", "dest": "/upload/$1" },
    { "src": "/users/(.*)", "dest": "/users/$1" },
    { "src": "/.*", "dest": "/client/build/index.html" }
  ]
}
